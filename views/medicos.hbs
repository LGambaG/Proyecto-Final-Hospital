<h1>Centro Medico Hospital MetaPower S.L.</h1>
<h2>LISTADO DE MÉDICOS</h2>
<table>
    <thead>
        <tr>
            <th>Cedula</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Especialidad</th>
            <th>Consultorio</th>
            <th>Correo</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each medicos}}
        <tr>
            <form action="/medicos/actualizar/{{cedula}}" method="post">
                <td><input id="cedula" name="cedula" value="{{cedula}}" disabled></td>
                <td><input id="nombres" name="nombres" value="{{nombres}}" {{../opcion}} pattern="^[a-zA-Z\sñÑ]+$"></td>
                <td><input id="apellidos" name="apellidos" value="{{apellidos}}" {{../opcion}} pattern="^[a-zA-Z\sñÑ]+$"></td>
                <td><input id="especialidad" name="especialidad" value="{{especialidad}}" {{../opcion}} title="Escriba una especialidad válida"></td>
                <td><input id="consultorio" name="consultorio" value="{{consultorio}}" {{../opcion}} pattern="[0-9]{1,3}" title="El consultorio debe tener mínimo un caracter numerico y máximo tres"></td>
                <td><input id="correo" name="correo" value="{{correo}}" {{../opcion}} type="email"></td>
                <td>
                    {{#if ../estado}}
                    <a class="eliminar" href="/medicos/eliminar/{{cedula}}" onclick="return confirm('¿Esta seguro que desea eliminar el registro?')" title="Eliminar registro"><img src="/images/delete.png"></a>
                    <a class="editar" href="/medicos/activar" title="Editar registro"><img src="/images/edit.png"></a>
                    {{else}}
                    <input type="submit" value="Enviar">
                    {{/if}}
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<div class="opciones-tabla">
<a class="volver" href="/">Volver</a>
<a href="/medicos/agregar-medico">Agregar medico</a>
</div>
