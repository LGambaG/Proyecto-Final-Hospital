<h1>Centro Medico Hospital MetaPower S.L.</h1>
<h2>LISTADO DE CITAS MÉDICAS AGENDADAS</h2>
<table>
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Paciente</th>
            <th>Medico</th>
            <th>Consultorio</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each citas}}
        <tr>
            <td>{{formatearFecha fecha}}</td>
            <td>{{nombre}}</td>
            <td>{{nombres}}</td>
            <td>{{consultorio}}</td>
            <td>
                <a class="eliminar" href="/citas/eliminar/{{id}}" onclick="return confirm('¿Esta seguro que desea eliminar el registro?')" title="Eliminar registro"><img src="/images/delete.png"></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<div class="opciones-tabla">
    <a class="volver" href="/">Volver</a>
    <a href="/citas/agregar-cita">Nueva cita</a>    
</div>